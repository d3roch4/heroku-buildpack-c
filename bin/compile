#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

ls -la
echo #PWD
mkdir -p $CACHE_DIR

CMAKE_URL="https://s3.amazonaws.com/mergeguard/cmake.tar.gz"
CMAKE_BINARIES="$CACHE_DIR/cmake.tar.gz"

if [ -f $CMAKE_BINARIES ]; then
  echo "Using cmake binaries from cache"
else
  echo "Downloading binaries ($CMAKE_URL)"
  curl -L $CMAKE_URL -o $CMAKE_BINARIES

  cd $BUILD_DIR
  mkdir -p /app/vendor/bin
  tar -C /app/vendor -xf $CMAKE_BINARIES
fi

echo #PWD

cd $BUILD_DIR
mkdir build
cd build
/app/vendor/bin/cmake ..
echo "-----> Configuring CMake"

# make
echo "-----> Compiling with Make"
make
