cd build
cmake -DBOOST_LIBRARYDIR=.apt/usr/lib/x86_64-linux-gnu/ -DCMAKE_INSTALL_PREFIX:PATH=/app/usr $BUILD_DIR 

# make
echo "-----> Compiling with Make"
make

