#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2
INSTALL_DIR=$BUILD_DIR

#echo "instaling cmake"
#wget https://github.com/Munett/cmake-binary/raw/master/cmake.tar.gz -O cmake.tgz
#mkdir -p /app/vendor/cmake
#tar xzvf cmake.tgz -C /app/vendor/cmake

echo "-----> Configuring CMake"
cd $BUILD_DIR 
mkdir build
cd build 
cmake -DBOOST_LIBRARYDIR=.apt/usr/lib/x86_64-linux-gnu/ -DCMAKE_INSTALL_PREFIX:PATH=$INSTALL_DIR $BUILD_DIR 

# make
echo "-----> Compiling with Make"
make

echo "-----> Instaling"
mkdir -p $INSTALL_DIR
make install
cd ..
rm -rf build
rm -rf $INSTALL_DIR/include $INSTALL_DIR/*/*.a $INSTALL_DIR/lib/cmake $INSTALL_DIR/lib/pkgconfig
echo "-----> Compilation finish"
